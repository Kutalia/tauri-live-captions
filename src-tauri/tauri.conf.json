{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-live-captions",
  "version": "0.1.0",
  "identifier": "com.kotek.tauri-live-captions",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-live-captions",
        "width": 800,
        "height": 600,
        "maximized": true,
        "hiddenTitle": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/Kutalia/tauri-live-captions/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzRkVGQzY3NkQ1NEZCOTgKUldTWSsxUnRaL3orSXk1NW1LM3FJc2JmMWoySGt6R2FiL2RWaVQzcjFVeFVhWThqeW55ZnQxYkQK",
       "windows": {
        "installMode": "passive"
      }
    }
  }
}
